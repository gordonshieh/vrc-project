<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
    <session-factory>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="connection.url">jdbc:h2:file:/home/freeman/prj/resources/database.db
        </property>
        <property name="connection.autocommit">true</property>
        <mapping class="ca.sfu.teambeta.core.Player"/>
        <mapping class="ca.sfu.teambeta.core.Pair"/>
        <mapping class="ca.sfu.teambeta.core.Ladder"/>
    </session-factory>

</hibernate-configuration>
